<h3>スケジュール一覧</h3>

<% if flash[:notice] %>
   <p class="notice"><%= flash[:notice] %></p>
<% end %>

<table>
   <thead>
     <tr>
       <th>id</th>
       <th>タイトル</th>
       <th>開始日</th>
       <th>終了日</th>
       <th>終日</th>
       <th>スケジュール更新日時</th>
       <th>確認</th>
       <th>編集</th>
       <th>削除</th>
     </tr>
   </thead>
   
   <tbody>
     <% @users.each do |user| %>
       <tr>
         <td><%= user.id %></td>
         <td><%= user.title %></td>
         <td><%= user.start.strftime('%Y年%m月%d日') if user.start %></td>
         <td><%= user.finish.strftime('%Y年%m月%d日') if user.start %></td>
         <td><%= user.allday ? '◯' : 'ー' %></td>
         <td><%= user.updated_at.to_s(:datetime_jphm) %></td>
         <td>
           <%= link_to "確認", user %>
         </td>
         <td>
           <%= link_to "編集", [:edit, user] %>
         </td>
         <td>
           <%= link_to "削除", user, data: { turbo_method: "get", turbo_confirm: "本当に削除しますか？" } %>
         </td>
       </tr>
     <% end %>
   </tbody>
 </table>
 
 <p><%= link_to "スケジュール新規登録", :new_user %></p>