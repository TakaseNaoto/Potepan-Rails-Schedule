<h3>スケジュール詳細</h3>

<table>
   <tr>
     <th>タイトル</th>
     <td><%= @user.title %></td>
   </tr>
   <tr>
     <th>開始日</th>
     <td><%= @user.start.strftime('%Y年%m月%d日') if @user.start %></td>
   </tr>
   <tr>
     <th>投稿日時</th>
     <td><%= @user.created_at.to_s(:datetime_jp) %></td>
   </tr>
   <tr>
     <th>終日</th>
     <td><%= @user.allday ? '◯' : 'ー' %></td>
   </tr>
   <tr>
     <th>スケジュールメモ</th>
     <td><%= safe_join(@user.memo.to_s.split("\n"), tag.br) %></td>
   </tr>
</table>
 
<div>
  <ul>
   <li><%= link_to "スケジュール一覧に戻る", :users %></li>
  </ul>
</div>